-- Prison Life by BMF & Chat GPT

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PrisonLifeBMF"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 500, 0, 400)
MainFrame.Position = UDim2.new(0.5, -250, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

-- UI Gradient
local UIGradient = Instance.new("UIGradient")
UIGradient.Color = ColorSequence.new(Color3.fromRGB(40,40,40), Color3.fromRGB(20,20,20))
UIGradient.Parent = MainFrame

-- Title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundTransparency = 1
Title.Text = "Prison Life - BMF"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 24
Title.Parent = MainFrame

-- Error Log
local ErrorLog = Instance.new("TextLabel")
ErrorLog.Size = UDim2.new(1, -20, 0, 30)
ErrorLog.Position = UDim2.new(0, 10, 0, 50)
ErrorLog.BackgroundTransparency = 1
ErrorLog.Text = "Error Log: None"
ErrorLog.TextColor3 = Color3.fromRGB(255, 100, 100)
ErrorLog.Font = Enum.Font.Gotham
ErrorLog.TextSize = 16
ErrorLog.TextXAlignment = Enum.TextXAlignment.Left
ErrorLog.Parent = MainFrame

-- Tabs Container
local TabsFrame = Instance.new("Frame")
TabsFrame.Size = UDim2.new(0, 120, 1, -90)
TabsFrame.Position = UDim2.new(0, 0, 0, 90)
TabsFrame.BackgroundTransparency = 1
TabsFrame.Parent = MainFrame

-- Buttons Container
local ButtonsFrame = Instance.new("Frame")
ButtonsFrame.Size = UDim2.new(1, -120, 1, -90)
ButtonsFrame.Position = UDim2.new(0, 120, 0, 90)
ButtonsFrame.BackgroundTransparency = 1
ButtonsFrame.Parent = MainFrame

-- Tabs Names
local tabs = {"Player", "Teams", "Teleports", "Weapons", "Cheats", "Misc", "Scripts"}

-- Create tab buttons
local tabButtons = {}
for i, tabName in ipairs(tabs) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 40)
    button.Position = UDim2.new(0, 5, 0, (i-1)*45)
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 18
    button.Text = tabName
    button.Parent = TabsFrame

    tabButtons[tabName] = button
end

-- Function to clear buttons in ButtonsFrame
local function clearButtons()
    for _, child in ipairs(ButtonsFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
end

-- Function to create WIP buttons
local function createWIPButtons(tabName)
    clearButtons()
    for i = 1, 5 do
        local wipButton = Instance.new("TextButton")
        wipButton.Size = UDim2.new(0, 150, 0, 35)
        wipButton.Position = UDim2.new(0, 10, 0, (i-1)*40)
        wipButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        wipButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        wipButton.Font = Enum.Font.Gotham
        wipButton.TextSize = 16
        wipButton.Text = "WIP!"
        wipButton.Parent = ButtonsFrame
    end
end

-- Connect tab buttons
for tabName, button in pairs(tabButtons) do
    button.MouseButton1Click:Connect(function()
        createWIPButtons(tabName)
    end)
end

-- Open default tab
createWIPButtons("Player")
